{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "import/extensions": [
            "error",
            "ignorePackages"
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_id",
                    "_doc"
                ]
            }
        ],
        "consistent-return": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^(next|req|res)$"
            }
        ],
        "class-methods-use-this": "off"
    },
    "overrides": [
        {
            "files": [
                "**/*.test.js",
                "**/tests/**/*.js"
            ],
            "rules": {
                "import/no-unresolved": "off"
            }
        }
    ]
}